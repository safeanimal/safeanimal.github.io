---
import { profile } from '@data/profile';
import Button from '@components/UI/Button.astro';
import SocialLinks from '@components/UI/SocialLinks.astro';
---

<section class="hero">
  <div class="container">
    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title">{profile.name}</h1>
        <p class="hero-subtitle">{profile.title}</p>
        <p class="hero-institution">
          {profile.department}<br />
          {profile.institution}
        </p>
        
        <p class="hero-bio">{profile.bio}</p>

        <div class="hero-actions">
          <Button href={`mailto:${profile.email}`} variant="primary">
            Contact Me
          </Button>
          {profile.cv && (
            <Button href={profile.cv} variant="outline" external={true}>
              Download CV
            </Button>
          )}
        </div>

        <div class="hero-social">
          <SocialLinks />
        </div>
      </div>

      {profile.avatar && (
        <div class="hero-image">
          <img src={profile.avatar} alt={profile.name} />
        </div>
      )}
    </div>
  </div>
</section>

<style>
  .hero {
    padding: var(--spacing-20) 0 var(--spacing-16);
    background: linear-gradient(
      135deg,
      var(--color-surface) 0%,
      var(--color-surface-variant) 100%
    );
  }

  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--spacing-4);
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: var(--spacing-12);
    align-items: center;
  }

  .hero-text {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-4);
  }

  .hero-title {
    font-size: var(--font-size-4xl);
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0;
    line-height: 1.1;
  }

  .hero-subtitle {
    font-size: var(--font-size-xl);
    color: var(--color-primary);
    font-weight: 600;
    margin: 0;
  }

  .hero-institution {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    margin: 0;
    line-height: 1.6;
  }

  .hero-bio {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin: var(--spacing-4) 0;
    max-width: 700px;
  }

  .hero-actions {
    display: flex;
    gap: var(--spacing-4);
    flex-wrap: wrap;
    margin-top: var(--spacing-4);
  }

  .hero-social {
    margin-top: var(--spacing-2);
  }

  .hero-image {
    width: 300px;
    height: 300px;
    border-radius: var(--radius-full);
    overflow: hidden;
    border: 4px solid var(--color-primary-light);
    box-shadow: var(--shadow-lg);
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media (max-width: 968px) {
    .hero {
      padding: var(--spacing-16) 0 var(--spacing-12);
    }

    .hero-content {
      grid-template-columns: 1fr;
      text-align: center;
      gap: var(--spacing-8);
    }

    .hero-text {
      align-items: center;
    }

    .hero-title {
      font-size: var(--font-size-3xl);
    }

    .hero-subtitle {
      font-size: var(--font-size-lg);
    }

    .hero-bio {
      text-align: left;
    }

    .hero-image {
      width: 250px;
      height: 250px;
      margin: 0 auto;
    }

    .hero-actions {
      justify-content: center;
    }
  }

  @media (max-width: 640px) {
    .hero-title {
      font-size: var(--font-size-2xl);
    }

    .hero-actions {
      flex-direction: column;
      width: 100%;
    }

    .hero-actions :global(a) {
      width: 100%;
    }
  }
</style>

